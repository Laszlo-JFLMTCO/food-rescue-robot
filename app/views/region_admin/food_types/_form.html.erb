<%= form_for [:region_admin, @food_type] do |f| %>
  <table class="table table-striped">
    <tr>
      <th>
        <%= f.label :region %>
      </th>
      <td>
        <%= f.select :region_id, @available_regions.map{|r| [r.name, r.id]} %>
      </td>
    </tr>
    <tr>
      <th>
        <%= f.label :name %>
      </th>
      <td>
        <%= f.text_field :name %>
      </td>
    </tr>
  </table>

  <%= f.submit %>
<% end %>
